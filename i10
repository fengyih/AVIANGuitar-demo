        <div class="content_login">
            <div class="login-form">
                <p class="login-type">

                    <span class="active" style="color: black">新用户注册</span>

                </p>
                <form action="index.html" onSubmit="return checkForm()">
                    <div id="form-itemGroup">
                        <input type="text" id="userName" placeholder="用户名" maxlength="12" class="userName input"
                            onBlur="checkUserName()" oninput="checkUserName()" />
                        <span class="default" id="nameErr">
                            <img src="images/s.png" class="input_name" id="input_img" />输入用户名</span>
                    </div>
                    <div id="form-itemGroup">
                        <input type="password" id="userPasword" maxlength="8" placeholder="密码" class="userName input"
                            onBlur="checkPassword()" oninput="checkPassword()" />
                        <span class="default" id="passwordErr">
                            <img src="images/s.png" alt="" class="input_name" id="input_img" />输入4到8位的密码
                        </span>
                    </div>
                    <div id="form-itemGroup">
                        <input type="password" maxlength="8" id="userConfirmPasword" class="userName input"
                            placeholder="再次输入密码" onBlur="ConfirmPassword()" oninput="ConfirmPassword()" />
                        <span class="default" id="conPasswordErr">
                            <img src="images/s.png" alt="" class="input_name" id="input_img" />再输入一遍密码
                        </span>
                    </div>
                    <div id="form-itemGroup">
                        <input type="text" id="userPhone" class="userName input" placeholder="手机号码" maxlength="11"
                            onBlur="checkPhone()" oninput="checkPhone()" />
                        <span class="default" id="phoneErr">
                            <img src="images/s.png" alt="" class="input_name" id="input_img" />输入11位手机号
                        </span>
                    </div>
                    <div>
                        <button type="submit" class="but" onclick="register()">
                            注册
                        </button>
                    </div>
                </form>
            </div>
            </form>
        </div>
